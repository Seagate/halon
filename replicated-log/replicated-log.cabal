Name:           replicated-log
Version:        0.1
Stability:      experimental
Synopsis:       Replicated log distributed abstraction.
License:        AllRightsReserved
Copyright:      Â© 2013 Xyratex Technology Limited
Category:       Control
Build-Type:     Simple
Cabal-Version:  >=1.10

source-repository master
  Type:         git
  Location:     git@github.com:tweag/halon.git
  Subdir:       replicated-log

Flag distributed-benchmarks
  Description: Enables distributed benchmarks.
  Default: False

Flag maintainer
  Description: Enforce strict code quality checks (-Werror, etc)
  Default: False

Library
  Exposed-Modules:  Control.Distributed.Log
                    Control.Distributed.Log.Persistence
                    Control.Distributed.Log.Persistence.LevelDB
                    Control.Distributed.Log.Persistence.Paxos
                    Control.Distributed.Log.Policy
                    Control.Distributed.Log.Snapshot
                    Control.Distributed.Process.Batcher
                    Control.Distributed.Process.ProcessPool
                    Control.Distributed.Process.Timeout
                    Control.Distributed.State
  Other-Modules:    Control.Distributed.Log.Internal
                    Control.Distributed.Log.Messages
  Hs-Source-Dirs:   src/
  Build-Depends:    base >= 4.7,
                    binary >= 0.6,
                    bytestring >= 0.9.2,
                    cereal,
                    consensus,
                    consensus-paxos,
                    containers >= 0.5,
                    constraints >= 0.4,
                    directory >= 1.2.1,
                    distributed-process-scheduler,
                    distributed-static >= 0.2,
                    filepath >= 1.4.0,
                    leveldb-haskell >= 0.6.1,
                    mtl >= 2.0,
                    network-transport >= 0.3,
                    syb >= 0.3,
                    rank1dynamic >= 0.1,
                    safecopy >= 0.8,
                    template-haskell >= 2.7.0
  Default-Language: Haskell2010
  Default-Extensions: BangPatterns
                      DeriveDataTypeable
                      DeriveGeneric
                      ExistentialQuantification
                      GeneralizedNewtypeDeriving
                      RecordWildCards NamedFieldPuns
                      ScopedTypeVariables
                      TupleSections
  Other-Extensions:   TemplateHaskell
                      TypeFamilies

  Ghc-Options: -Wall

  if flag(maintainer)
    Ghc-Options: -Werror

Test-Suite tests
  Type:             exitcode-stdio-1.0
  Main-Is:          ut.hs
  Default-Language: Haskell2010
  Hs-Source-Dirs:   tests

  Ghc-Options: -Wall -threaded -eventlog -debug -with-rtsopts=-l-au

  if flag(maintainer)
    Ghc-Options: -Werror

  Build-Depends:    base >= 4.7,
                    binary >= 0.6,
                    Cabal >= 1.16,
                    consensus,
                    consensus-paxos,
                    constraints >= 0.4,
                    containers >= 0.5,
                    directory >= 1.2.2,
                    distributed-process-scheduler,
                    distributed-process-test,
                    distributed-static >= 0.2.0,
                    filepath >= 1.3,
                    mtl >= 2.0.0,
                    network >= 2.4.2.3,
                    network-transport,
                    network-transport-inmemory,
                    network-transport-tcp,
                    random,
                    rank1dynamic >= 0.1,
                    replicated-log,
                    unix
  Default-Extensions: DeriveDataTypeable
                      DeriveGeneric
                      GeneralizedNewtypeDeriving
                      RecordWildCards NamedFieldPuns
                      ScopedTypeVariables
                      CPP

Test-Suite tests-scheduler
  Type:             exitcode-stdio-1.0
  Main-Is:          tests-scheduler.hs
  Default-Language: Haskell2010
  Hs-Source-Dirs:   tests

  Ghc-Options: -Wall -threaded -eventlog -debug -with-rtsopts=-l-au

  if flag(maintainer)
