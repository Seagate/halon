Name:           halon
Version:        0.1
Stability:      experimental
Synopsis:       High Availability system.
Description:    The High Availability system is a library that can be used
                together with deployment-specific components to ensure the
                high availability of a distributed application.
Homepage:       https://github.com/tweag/halon
License:        AllRightsReserved
Copyright:      (C) 2013 Xyratex Technology Limited
Category:       Control
Build-Type:     Simple
Cabal-Version:  >=1.10

source-repository master
  Type:         git
  Location:     git@github.com:tweag/halon.git
  Subdir:       halon/

Flag debug
  Description: Enable tracing output so errors are logged.
  Default: False

Flag rpc
  Description: Build tests with the RPC backend instead of TCP.
  Default: False

Flag maintainer
  Description: Enforce strict code quality checks (-Werror, etc)
  Default: False

Library
  Hs-Source-Dirs:  src/lib
  Default-Language: Haskell2010
  Default-Extensions: BangPatterns
                      DeriveDataTypeable
                      DeriveGeneric
                      GeneralizedNewtypeDeriving
                      NamedFieldPuns
                      RecordWildCards
                      ScopedTypeVariables
                      StandaloneDeriving
                      TupleSections

  Ghc-Options:  -Wall -Werror

  Exposed-Modules: HA.CallTimeout
                   HA.Resources
                   HA.Debug
                   HA.Encode
                   HA.EventQueue
                   HA.EventQueue.Producer
                   HA.EventQueue.Types
                   HA.EQTracker
                   HA.ResourceGraph
                   HA.Resources.TH
                   HA.Multimap
                   HA.Multimap.Implementation
                   HA.Multimap.Process
                   HA.Replicator
                   HA.Replicator.Log
                   HA.Replicator.Mock
                   HA.RecoverySupervisor
                   HA.Storage
                   HA.NodeUp
                   HA.Network.RemoteTables
                   HA.Network.Socket
                   HA.Service
                   HA.Service.TH
                   HA.Services.Dummy
                   HA.Services.Ekg
                   HA.Services.Ekg.Types
                   HA.Services.Empty
                   HA.Services.Noisy
                   HA.Services.Ping
                   HA.Startup
                   HA.Logger
                   Control.SpineSeq
                   System.SystemD.API
  other-modules:   HA.Service.Internal

  Build-Depends:   base,
                   binary >= 0.6,
                   bytestring,
                   bytestring-trie,
                   cereal,
                   consensus,
                   consensus-paxos,
                   containers,
                   constraints >= 0.4,
                   ekg,
                   ekg-core,
                   filepath >= 1.3,
                   free,
                   network,
                   distributed-commands >= 0.1,
                   distributed-process-scheduler,
                   distributed-static,
                   hashable,
                   directory,
                   exceptions,
                   ghc-prim,
                   mtl >= 2.0,
                   process >= 1.1,
                   replicated-log,
                   halon-instances,
                   singletons,
                   stm,
                   text,
                   unordered-containers,
                   network-transport,
                   options-schema >= 0.1.1.0,
                   cep,
                   template-haskell,
                   hostname,
                   uuid,
                   parsec

  if flag(rpc)
    Build-Depends: rpclite,
                   network-transport,
                   network-transport-rpc >= 0.0.1
  else
    Build-Depends: network-transport-tcp

Benchmark sync-rg
  Type:             exitcode-stdio-1.0
  Main-Is:          sync-rg.hs
  Default-Language: Haskell2010
  Hs-Source-Dirs:   benchmarks

  Buildable:        False

  Ghc-Options: -threaded -Wall

  if flag(maintainer)
    Ghc-Options: -Werror

  if flag(debug)
    Ghc-Options:    -eventlog -debug -with-rtsopts=-l-au
  Default-Extensions: DeriveDataTypeable
                      DeriveGeneric
                      GeneralizedNewtypeDeriving
                      RecordWildCards NamedFieldPuns
                      ScopedTypeVariables
  Build-Depends:    halon,
                    base >= 4.5,
                    Cabal >= 1.16,
                    criterion,
                    binary >= 0.6.4,
                    bytestring,
                    deepseq,
                    distributed-process-scheduler,
                    distributed-process-test,
                    distributed-static,
                    directory,
                    filepath,
                    hashable,
                    network,
                    network-transport,
                    network-transport-controlled,
                    process >= 1.2,
                    replicated-log,
                    unordered-containers,
                    options-schema >= 0.1.1.0,
                    random,
                    tasty >= 0.8,
                    tasty-files,
                    tasty-hunit,
                    cep,
                    uuid,
                    containers,
                    stm
  Build-Depends:    network-transport-tcp >= 0.3,
                    network-transport-inmemory >= 0.5

